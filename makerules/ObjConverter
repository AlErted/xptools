##
# generic configuration
#######################

TYPE		:= EXECUTABLE
CFLAGS		:= -include ./src/Obj/XDefs.h
CXXFLAGS	:= -include ./src/Obj/XDefs.h
DEFINES		:= -DUSE_JPEG=1 -DUSE_TIF=1
LIBS		:= -lCGAL -ldime -l3ds

ifdef PLAT_LINUX
LDFLAGS		:= -static -static-libgcc
endif #PLAT_LINUX

ifdef PLAT_DARWIN
LDFLAGS		:= -static-libgcc
LIBS		:= ./libs/local/lib/libCGAL.a
LIBS		+= ./libs/local/lib/libdime.a
LIBS		+= ./libs/local/lib/lib3ds.a
endif #PLAT_DARWIN

ifdef PLAT_MINGW
DEFINES		:= -DDIME_NOT_DLL -DUNDER_CE
REAL_TARGET	:= $(dir $(TARGET))/ObjConverter.exe
endif #PLAT_MINGW


