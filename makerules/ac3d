##
# generic configuration
#######################

TYPE		:= LIBDYNAMIC
CFLAGS		:= -include ./src/Obj/XDefs.h
CXXFLAGS	:= -include ./src/Obj/XDefs.h

ifdef PLAT_MINGW
DEFINES		:= -DDIME_NOT_DLL -DUNDER_CE -DWINDOWS -DMINGW_BUILD=1
LIBPATHS	+= -L./SDK/ac3d
LIBS		:= -lac3d -lopengl32
REAL_TARGET	:= $(dir $(TARGET))/XPlaneSupportWin.p
endif #PLAT_MINGW

ifdef PLAT_LINUX
# always build 32 bit plugin
ifdef ARCH_X86_64
	M32_SWITCH	:= -m32
endif
LDFLAGS		:= -static-libgcc -Wl,-O2 -Wl,-Bstatic
REAL_TARGET	:= $(dir $(TARGET))/XPlaneSupportLin.p
FORCEREBUILD_SUFFIX := _fpic
endif #PLAT_LINUX

ifdef PLAT_DARWIN
# we haven't set -fvisibility=hidden per default for mac builds
CFLAGS		+= -fvisibility=hidden
CXXFLAGS	+= -fvisibility=hidden
REAL_TARGET	:= $(dir $(TARGET))/XPlaneSupportMac.p
FORCEREBUILD_SUFFIX := _fpic
endif #PLAT_DARWIN


