##
# generic configuration
#######################

TYPE		:= EXECUTABLE
CFLAGS		:= -include ./src/Obj/XDefs.h
CXXFLAGS	:= -include ./src/Obj/XDefs.h
DEFINES		:= -DUSE_JPEG=1 -DUSE_TIF=1

ifdef PLAT_LINUX
LDFLAGS		:= -nodefaultlibs -static-libgcc
LIBS		:= -Wl,-Bstatic
LIBS		+= -lstdc++ -lm -lgcc -lgcc_eh
LIBS		+= -Wl,-Bdynamic
LIBS		+= -ldl -lpthread -lc
LIBS		+= -Wl,-Bstatic
LIBS		+= -lgcc -lgcc_eh
LIBS		+= -Wl,-Bdynamic
LIBS		+= -lQtCore -lQtGui -lQtOpenGL
LIBS		+= -Wl,-Bstatic
LIBS		+= -lCGAL -lbfd -liberty -lsquish -ltiff -ljpeg -lpng -lz
endif #PLAT_LINUX

ifdef PLAT_MINGW
LIBS		:= -lglu32 -lopengl32 -lgdi32 -lole32 -lcomctl32 -lcomdlg32
LIBS		+= -luuid
LIBS		+= -Wl,-Bstatic
LIBS		+= -lCGAL -lsquish -ltiff -ljpeg
LIBS		+= -lpng -lz
LDFLAGS		:= -Wl,-subsystem,windows
DEFINES		+= -D_WIN32_IE=0x0500 -D_WIN32_WINNT=0x0500 -DMINGW_BUILD=1
WIN_RESOURCES	:= ./src/XPTools/ObjView.rc
REAL_TARGET	:= $(dir $(TARGET))/ObjView.exe
endif #PLAT_MINGW

ifdef PLAT_DARWIN
LDFLAGS		:= -static-libgcc -framework Carbon -framework OpenGL -framework AGL
LIBS		:= ./libs/local/lib/libCGAL.a
LIBS		+= ./libs/local/lib/libsquish.a
LIBS		+= ./libs/local/lib/libtiff.a
LIBS		+= ./libs/local/lib/libjpeg.a
LIBS		+= ./libs/local/lib/libpng.a
LIBS		+= ./libs/local/lib/libz.a
endif #PLAT_DARWIN

